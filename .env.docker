# =============================================================================
# CLASH ROYALE DECK BUILDER - DOCKER DEVELOPMENT ENVIRONMENT
# =============================================================================
# This file contains configuration for containerized development.
# Generated from .env.example template.
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# MySQL database connection settings for Docker containers
DB_ROOT_PASSWORD=docker_root_password123
DB_NAME=clash_deck_builder_docker
DB_USER=clash_user
DB_PASSWORD=docker_user_password123
DB_HOST=database
DB_PORT=3306

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
# Clash Royale API key - Replace with your actual key from https://developer.clashroyale.com/
CLASH_ROYALE_API_KEY=your_clash_royale_api_key_here

# Application debug mode (disabled for Docker)
DEBUG=false

# Logging level (info for Docker development)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
# Allowed origins for CORS (Docker development URLs)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Environment type
ENVIRONMENT=docker

# Backend server host and port
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# JWT secret key for authentication (Docker development)
JWT_SECRET_KEY=docker_development_jwt_secret_change_for_production

# Session timeout in minutes
SESSION_TIMEOUT=60

# -----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION
# -----------------------------------------------------------------------------
# Database connection pool size
DB_POOL_SIZE=10

# API rate limiting (requests per minute)
API_RATE_LIMIT=100

# Cache TTL in seconds
CACHE_TTL=3600